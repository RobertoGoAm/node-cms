{
  "name": "cms-backend",
  "version": "0.1.0",
  "description": "Proyecto para aprender todo lo posible de typescript, mean, tdd, rxjs, ngrx y jest entre otros",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "build:watch": "rm -rf ./build && tsc --watch",
    "start": "NODE_ENV=development && node ./build/server.js",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --coverage --runInBand --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobertoGoAm/node-cms.git"
  },
  "keywords": [
    "javascript",
    "js",
    "typescript",
    "ts",
    "mean",
    "mongodb",
    "angular",
    "node",
    "express",
    "tdd",
    "rxjs",
    "ngrx",
    "rxjs",
    "jest"
  ],
  "author": "Roberto Gomez Amores",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/RobertoGoAm/node-cms/issues"
  },
  "homepage": "https://github.com/RobertoGoAm/node-cms#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "jest": "^26.4.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
       "branches": 80,
       "functions": 80,
       "lines": 80,
       "statements": 80
     }
    },
    "coverageReporters": [ "json", "lcov", "text", "clover" ],
    "transform": {
      ".(ts|tsx|js|jsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "bail": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(express-validator)/)"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.spec.(ts|js)"
    ]
  }
}
