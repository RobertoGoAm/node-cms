{
  "name": "backend",
  "version": "0.1.0",
  "description": "Proyecto para aprender todo lo posible de typescript, mean, tdd, rxjs, ngrx y jest entre otros",
  "main": "index.js",
  "scripts": {
    "prod:build": "NODE_ENV=production && rm -rf ./dist && tsc",
    "prod:start": "NODE_ENV=production && nodemon ./dist/backend/server.js",
    "build": "NODE_ENV=development && rm -rf ./dist && tsc",
    "build:watch": "NODE_ENV=development && rm -rf ./dist && tsc --watch",
    "start": "NODE_ENV=development && nodemon ./dist/backend/server.js",
    "test": "NODE_ENV=test && jest --coverage --runInBand  --forceExit",
    "test:watch": "NODE_ENV=test && jest --coverage --runInBand --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobertoGoAm/node-cms.git"
  },
  "keywords": [
    "javascript",
    "js",
    "typescript",
    "ts",
    "mean",
    "mongodb",
    "angular",
    "node",
    "express",
    "tdd",
    "rxjs",
    "ngrx",
    "rxjs",
    "jest"
  ],
  "author": "Roberto Gomez Amores",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/RobertoGoAm/node-cms/issues"
  },
  "homepage": "https://github.com/RobertoGoAm/node-cms#readme",
  "dependencies": {
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.9"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  }
}
